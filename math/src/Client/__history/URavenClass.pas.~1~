procedure TRavenClass.Button2Click(Sender: TObject);
begin
  RavenLvl := 1;
  Truth := 0;
  resRaven.Visible := False;
  ImageLoad(Self);
  StatusBar1.Panels[0].Text := '0:00';
  RavenTimer.Enabled := True;
end;

