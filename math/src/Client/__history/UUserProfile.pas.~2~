{$R *.dfm}

procedure TFUserProfile.ExecuteClose();
begin
  Button5.Click;
end;

procedure TFUserProfile.LoadUserInfo(user: TUserInfo);
begin
  StatusBarUserInfo.Panels[0].Text:=user.ToString(True);
end;

procedure TFUserProfile.GridAlign(DbgridAlign: TDbgrid);
Var i,j: integer;//счетчики для цикла
    ifild,jrows: integer; //сюда запишем количество строк и столбцов полученного запроса
twidth,maxwidth: integer;//длина текста и максимальная длина текста
          fname: string; //сюда будем записывать имя колонки
begin
 ifild:=DbgridAlign.FieldCount-1;//столбцы
 jrows:=DbgridAlign.DataSource.DataSet.RecordCount-1;//строки
 for i:=0 to ifild do //открываем цикл по колонкам
   begin
    maxwidth:=0;//обнуляем максимальное значение
    fname:=DbgridAlign.Columns.Items[i].FieldName; //запоминаем имя колонки
    twidth:=length(trim(DbgridAlign.DataSource.DataSet.FieldByName(fname).AsString));//считаем длину
    DbgridAlign.DataSource.DataSet.First;
    for j:=0 to jrows  do //открываем цикл по строкам
     begin
      twidth:=length(trim(DbgridAlign.DataSource.DataSet.FieldByName(fname).AsString));//считаем длину
      If maxwidth<twidth then maxwidth:=twidth;//сравниваем с максимальной и перезаписываем по надобности
      DbgridAlign.DataSource.DataSet.Next;
     end;
    DbgridAlign.Columns.Items[i].Width:=maxwidth*DbgridAlign.Font.Size+DbgridAlign.Font.Size;//меняем ширину столбца на полученный максимум+одну букву
   end;
end;

procedure TFUserProfile.Button3Click(Sender: TObject);
begin
  if(edit1.Text = EmptyStr)then
  begin
    FCustomMessageBox.SetMessage('Ошибка', 'Введите пароль!', TTypeMessage.msgOK);
    Exit;
  end;

  if(Edit1.Text = TEMPLATE_PASSWORD)then
  begin
    FCustomMessageBox.SetMessage('Ошибка', 'Введите новый пароль!', TTypeMessage.msgOK);
    Exit;
  end;

  if(FCustomMessageBox.SetMessage('Внимание', 'Хотите изменить пароль?', TTypeMessage.msgOKCancel) = mrOk)then
  begin
    DataModuleClient.SetPasswordUser(FMainMenu.UserInfo.ID, Edit1.Text);
  end;
end;

procedure TFUserProfile.Button2Click(Sender: TObject);
begin
  Hide();
  RavenClass:=TRavenClass.Create(nil);
  RavenClass.Show();
end;

procedure TFUserProfile.Button5Click(Sender: TObject);
begin
  if(FCustomMessageBox.SetMessage('Внимание', 'Вы действительно хотите выйти из профиля?', TTypeMessage.msgOKCancel) = mrOk)then
  begin
//    FMainMenu.editPassword.Text:=EmptyStr;
//    FMainMenu.comboboxClassGroup.Items.Clear;
//    FMainMenu.comboboxFIO.Items.Clear;
    FMainMenu.Show;
    Close;
  end;
end;

