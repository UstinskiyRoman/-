var
  FRavenTest: TFRavenTest;
  IsFinishedTest: Boolean;
  RavenLvl: Integer = 1;
  Truth, Falsee, mm, ss, UId, TAnswers: Integer;
  STime : Integer;
  HardLevl : String;

